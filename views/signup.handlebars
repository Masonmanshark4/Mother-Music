{{!-- sign in page --}}
<section class="sign-in-page">
    <div class="form-heading">
        <h1 class="text-4xl font-bold text-gray-800">SIGN UP</h1>
        </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup" class="block text-gray-700 text-sm font-bold mb-2">Select a Username</label>
                <input type="text" class="entry-field border border-gray-300 rounded py-2 px-4 text-gray-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="username-signup" />
            </div>
            <div>
                <label for="password-signup" class="block text-gray-700 text-sm font-bold mb-2">Select a password</label>
                <input type="password" class="entry-field border border-gray-300 rounded py-2 px-4 text-gray-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="password-signup" />
            </div>
            <div>
              
                <button type="submit" class="login-signup-btn bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Sign Up!</button>
            </div>
        </form>
    </div>

     <a href="/login" class="text-gray-500 hover:text-blue-700">Login Instead</a>
</section>

<script src="/Public/js/signup.js"></script>
